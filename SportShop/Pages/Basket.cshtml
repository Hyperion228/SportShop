@page
@model SportShop.Pages.Basket

@{
    ViewData["Title"] = "Basket";
}

<!DOCTYPE html>

<html>
<head>
    <title>Корзина</title>
</head>
<body>
<div>
    @foreach (var product in Model.BasketItems)
    {
        <div class="product-card">
            <h5>@product.Title</h5>
            <h6>@product.Price руб</h6>
        </div>
    }
</div>
</body>
</html>